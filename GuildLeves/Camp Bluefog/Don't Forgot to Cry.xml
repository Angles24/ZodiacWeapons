	<Order>	
			<If Condition="not ExBuddy.Windows.GuildLeve.HasLeve(645) or not ExBuddy.Windows.GuildLeve.HasLeve(644)">
				<GetTo ZoneId="147" XYZ="33.91326, 4.68145, 399.2563"/>
