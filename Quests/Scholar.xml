    <CodeChunk Name="BuyOmnilexAtma"> <!-- Need to be changed to Omnilex -->
      <![CDATA[
        foreach (var x in GameObjectManager.GetObjectsOfType<Character>(true))
        {
          if (x.IsTargetable && x.NpcId == 1008948)
          {
            var pos = new Vector3(x.Location.X, x.Location.Y, x.Location.Z);
            var uppos = new Vector3(x.Location.X, x.Location.Y + 30, x.Location.Z);
            uint id = x.NpcId;
            while (Core.Player.Location.Distance(uppos) > 3f)
            {
              ff14bot.Pathing.Flightor.MoveTo(uppos);
              await Coroutine.Yield();
            }
            while (Core.Player.Location.Distance(pos) > 3f)
            {
              ff14bot.Pathing.Flightor.MoveTo(pos);
              await Coroutine.Yield();
            }
            ff14bot.Managers.GameObjectManager.GetObjectByNPCId(id).Interact();
            await Coroutine.Sleep(3000);
            ff14bot.RemoteWindows.Talk.Next();
            await Coroutine.Sleep(8000);
            break;
          }
        }
      ]]>
